---
interface Props {
  title: string
  paragraph: string
  video: string
}

const {title, video, paragraph} = Astro.props
---
<article class="grid grid-cols-2 gap-10">
  <div>
    <h2 class="text-[2.5rem] font-bold">{title}</h2>
      <p set:html={paragraph} class="mt-5"></p>
  </div>

  <iframe 
  class="place-self-center"
  width="460" 
  height="255" 
  src={video}
  title="YouTube video player" 
  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
  allowfullscreen
  ></iframe>
</article>