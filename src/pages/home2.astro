---
import TrabajosAnteriores from "@components/trabajos-anteriores.astro";
import Layout from "@layout"
---
<!--
// v0 by Vercel.
// https://v0.dev/t/SVfA4nWgMde
-->
<Layout title="Trabajos Agrícolas Hernández | Especialistas en nivelación">
  <div class="flex flex-col min-h-screen">
    <header class="px-4 lg:px-6 h-14 flex items-center">
      <a class="flex items-center justify-center" href="#"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-6 w-6"
          ><path
            d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
          ></path></svg
        >
        <span class="sr-only">Company Name</span></a
      >
      <nav class="ml-auto flex gap-4 sm:gap-6">
        <a href="#">INICIO</a>
        <a href="#">SERVICIOS DE NIVELACIÓN</a>
        <a href="#">COSTRUCCIÓN DE BALSAS</a>
        <a href="#">OBRA CIVIL</a>
      </nav>
    </header>
    
    <main class="flex-1">
      <section class="w-full pt-20 pb-6 sm:pb-12 md:pb-24 lg:pb-32 xl:pb-48 container px-4 md:px-6 mx-auto grid gap-6 lg:grid-cols-[1fr_400px] lg:gap-12 xl:grid-cols-[1fr_600px]">
          <div class="space-y-2 flex flex-col justify-center">
            <h1 class="text-3xl font-bold tracking-tighter sm:text-5xl xl:text-6xl/none">Welcome to Our Company</h1>
            <p class="max-w-[600px] text-gray-500 md:text-xl">
              We provide top-notch services that will boost your business.
            </p>
          </div>
        <picture class="w-[550px] h-[550px] mx-auto overflow-hidden rounded-xl object-cover sm:w-full lg:order-last aspect-square bg-gray-500">
          <video
            class="h-full object-cover"
            autoplay
            muted
            loop
            src="https://trabajosagricolashernandez.com/wp-content/uploads/2021/06/video-cabecera-1.mp4"
          ></video>          
        </picture>
      </section>
      
      
  
      <TrabajosAnteriores />
      
      <section class="w-full py-12 md:py-24 lg:py-32">
        <div class="container grid items-center gap-6 px-4 md:px-6 lg:grid-cols-2 lg:gap-10">
          <div class="space-y-2">
            <h2 class="text-3xl font-bold tracking-tighter md:text-4xl/tight">
              What our customers say
            </h2>
          </div>
          <div
            class="flex flex-col gap-2 min-[400px]:flex-row lg:justify-end"
          >
            <div
              class="rounded-lg border bg-card text-card-foreground shadow-sm"
              data-v0-t="card"
            >
              <div class="flex flex-col space-y-1.5 p-6">
                <div class="flex items-center">
                  <span
                    class="relative flex h-10 w-10 shrink-0 overflow-hidden rounded-full"
                    ></span><div
                    class="ml-4"
                  >
                    <h3 class="text-lg font-medium">Customer Name</h3><p
                      class="text-sm text-gray-500"
                    >
                      Location
                    </p>
                  </div>
                </div>
              </div><div class="p-6">
                <p class="text-gray-500">
                  "Testimonial from a customer."
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>
      
      
      <footer
        class="flex flex-col gap-2 sm:flex-row py-6 w-full shrink-0 items-center px-4 md:px-6 border-t"
      >
        <p class="text-xs text-gray-500">
          © Company Name. All rights reserved.
        </p><nav class="sm:ml-auto flex gap-4 sm:gap-6">
          <a class="text-xs hover:underline underline-offset-4" href="#">
            Privacy
          </a><a class="text-xs hover:underline underline-offset-4" href="#">
            Terms
          </a>
        </nav><div class="flex gap-4 sm:gap-6">
          <a class="text-xs" href="#"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-4 w-4"
              ><path
                d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
              ></path></svg
            ><span class="sr-only">Facebook</span></a
          ><a class="text-xs" href="#"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-4 w-4"
              ><path
                d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
              ></path></svg
            ><span class="sr-only">Twitter</span></a
          ><a class="text-xs" href="#"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-4 w-4"
              ><path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path><rect width="4" height="12" x="2" y="9"></rect><circle
                cx="4"
                cy="4"
                r="2"></circle></svg
            ><span class="sr-only">LinkedIn</span></a>
        </div>
      </footer>
    </main>
  </div>
</Layout>

<style>
  nav > a {
    @apply text-sm font-medium hover:underline underline-offset-4
  }
</style>